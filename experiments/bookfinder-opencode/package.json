{
	"name": "bookfinder-opencode",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"start": "bun run src/index.ts",
		"dev": "bun run --watch src/index.ts",
		"check": "tsc --noEmit",
		"lint": "biome check .",
		"format": "biome check --write . && bun run fmt:md",
		"fmt:md": "deno fmt **/*.md && bunx markdownlint-cli2 --fix \"**/*.md\"",
		"lint:md": "bunx markdownlint-cli2 \"**/*.md\"",
		"check:md": "deno fmt --check **/*.md && bunx markdownlint-cli2 \"**/*.md\"",
		"test": "bun test",
		"ci": "bun run lint && bun run check && bun run check:md && bun run test",
		"clean": "rm -rf node_modules dist && bun install",
		"outdated": "bun outdated"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "latest",
		"@types/yargs": "^17.0.35"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"yargs": "^18.0.0"
	}
}
