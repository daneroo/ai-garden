{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "types": ["bun", "node", "@opentui/react"],
    "jsx": "react-jsx",
    "jsxImportSource": "@opentui/react",

    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts"]
}
