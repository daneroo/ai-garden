{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "lint": "deno lint",
    "format-check": "deno fmt --check",
    "format-fix": "deno fmt",
    "test": "deno test --doc",
    "ci": "deno task format-check && deno task lint && deno task test"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  }
}
