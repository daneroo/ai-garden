    "@lingo-reader/epub-parser": "^0.2.5",
    "epubjs": "^0.3.93",
    "fast-glob": "^3.3.3",
    "jsdom": "^26.1.0",
    "playwright": "^1.38.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.1",
    "@types/yargs": "^17.0.33",
    "typescript": "^5.8.3"
  }
}
