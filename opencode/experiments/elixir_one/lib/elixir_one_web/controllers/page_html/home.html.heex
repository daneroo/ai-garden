<div class="min-h-screen bg-base-100 font-sans text-base-content selection:bg-primary/30">
  <div class="fixed inset-0 z-0 opacity-40 pointer-events-none">
    <div class="absolute top-[-20%] right-[-10%] w-[800px] h-[800px] bg-purple-600/20 rounded-full blur-[120px] mix-blend-screen animate-pulse-slow">
    </div>
    <div
      class="absolute bottom-[-20%] left-[-10%] w-[600px] h-[600px] bg-rose-500/20 rounded-full blur-[100px] mix-blend-screen animate-pulse-slow"
      style="animation-delay: 2s"
    >
    </div>
  </div>

  <div class="relative z-10 flex flex-col min-h-screen">
    <Layouts.site_header />

    <main class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-20 flex flex-col justify-center items-center gap-16">
      <!-- Hero Section -->
      <div class="hero rounded-3xl bg-base-100/30 backdrop-blur-sm border border-base-content/5 p-10 ring-1 ring-base-content/10 shadow-2xl max-w-4xl w-full">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-br from-rose-500 to-purple-600 pb-2">
              Prosody and Prose
            </h1>
            <p class="py-6 text-lg text-base-content/80 leading-relaxed">
              First Phoenix/LiveView App - Documenting how async background work integrates with LiveView.
            </p>
            <.link
              navigate={~p"/books"}
              class="btn btn-primary btn-lg shadow-xl shadow-rose-500/20 hover:shadow-rose-500/30 hover:scale-105 transition-all duration-300"
            >
              Get Started
            </.link>
          </div>
        </div>
      </div>
      
<!-- Main Content Grid -->
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-3 w-full max-w-5xl">
        <!-- Books (Active) -->
        <.link
          navigate={~p"/books"}
          class="group relative rounded-box px-6 py-4 text-sm font-semibold leading-6 sm:py-6"
        >
          <span class="absolute inset-0 rounded-box bg-base-200/60 backdrop-blur-sm border border-base-content/5 transition group-hover:bg-base-200/80 sm:group-hover:scale-105 shadow-sm hover:shadow-md">
          </span>
          <span class="relative flex items-center gap-4 sm:flex-col text-base-content">
            <svg viewBox="0 0 24 24" fill="none" aria-hidden="true" class="h-8 w-8 text-rose-500">
              <path
                d="M4 6c0-1.104.896-2 2-2h10a2 2 0 0 1 2 2v12a1 1 0 0 1-1 1H6a2 2 0 0 1-2-2V6Z"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
              <path
                d="M8 4v16"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
            <span class="text-lg">Books</span>
          </span>
        </.link>
        
<!-- ePubs (Placeholder) -->
        <div class="group relative rounded-box px-6 py-4 text-sm font-semibold leading-6 sm:py-6">
          <span class="absolute inset-0 rounded-box bg-base-200/40 border border-base-content/5 transition sm:group-hover:scale-105 cursor-not-allowed">
          </span>
          <span class="relative flex items-center gap-4 sm:flex-col opacity-50 text-base-content">
            <svg viewBox="0 0 24 24" fill="none" aria-hidden="true" class="h-8 w-8">
              <path
                d="M12 6h4M12 10h4M12 14h4M4 19.5A2.5 2.5 0 0 1 6.5 17H20M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
            <span class="text-lg">ePubs</span>
          </span>
        </div>
        
<!-- Transcriptions (Placeholder) -->
        <div class="group relative rounded-box px-6 py-4 text-sm font-semibold leading-6 sm:py-6">
          <span class="absolute inset-0 rounded-box bg-base-200/40 border border-base-content/5 transition sm:group-hover:scale-105 cursor-not-allowed">
          </span>
          <span class="relative flex items-center gap-4 sm:flex-col opacity-50 text-base-content">
            <svg viewBox="0 0 24 24" fill="none" aria-hidden="true" class="h-8 w-8">
              <path
                d="M3 18v-6a9 9 0 0 1 18 0v6M21 19a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3zM3 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H3z"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
            <span class="text-lg">Transcriptions</span>
          </span>
        </div>
      </div>
    </main>

    <Layouts.site_footer />
  </div>
</div>
