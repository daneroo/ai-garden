{
  "name": "bun-one",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*",
      "components/*",
      "apps/*"
    ],
    "catalogs": {
      "runtime": {
        "zod": "^4.3.6",
        "valibot": "^1.2.0"
      },
      "testing": {
        "@testing-library/react": "^16.3.1"
      }
    }
  },
  "scripts": {
    "test": "bun test",
    "test:e2e": "RUN_E2E_TESTS=1 bun test",
    "check": "tsc --noEmit",
    "check:starlight": "echo Fix: bun run --cwd apps/starlight check",
    "check:tan-one": "echo Fix Demo Files: bun run --cwd apps/tan-one check",
    "fmt": "bunx prettier --write .",
    "fmt:check": "bunx prettier --check .",
    "lint": "bunx eslint .",
    "ci": "bun run fmt:check && bun run lint && bun run check && bun run test",
    "clean-reinstall": "rm -rf node_modules **/node_modules && bun install",
    "outdated": "bun outdated -r"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@happy-dom/global-registrator": "^20.1.0",
    "@standard-schema/spec": "^1.1.0",
    "@testing-library/react": "^16.3.1",
    "@types/bun": "latest",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "happy-dom": "^20.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript-eslint": "^8.52.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
